<weapon name="Masterwork cold iron cestus" categorytext="Melee Weapon" typetext="B/P" attack="+12/+7" crit="19-20/×2" damage="1d4+2" equipped="mainhand" quantity="1">
<weight text="1 lb" value="1"></weight>
